
<%- contentFor('hero') %>

<!-- the content -->
    <main>
        <!-- hero content -->
        <div class="form">
            <!-- content for the hero -->
            <div class="form-content">
                <form action="/modify" method="GET">
                  <div class="form-group">
                  <!-- <input type="text" id="defectList" onkeyup="myFunction()" style="width:10%;" placeholder="Search for names.."> -->
                  <div class="scrollit">
                        <table id="defectList">
                            <tr class="header">
                            <th style="width:20%;">DefectID</th>
                            <th style="width:20%;">Severity</th>
                            <th style="width:20%;">Summary</th>
                            <th style="width:20%;">Status</th>
                            <th style="width:20%;">Assigned To</th>
                            </tr>
                            
                            <% for (var i = 0; i < defects.length; i++) { %>
                                <tr class="data">
                                <td style="width:20%;"><%= defects[i]._id %></td>
                                <td style="width:20%;"><%= defects[i].severity %></td>
                                <td style="width:20%;"><%= defects[i].summary %></td>
                                <td style="width:20%;"><%= defects[i].status %></td>
                                <td style="width:20%;"><%= defects[i].assignedto %></td>
                                </tr>    
                            <% } %>
                              
                        </table>
                    </div> 
                    </div>  
                </form> 
            </div>
        </div>
   
    </main>